@model IEnumerable<EventApp.Models.Tbluser>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        var rid;
        function sendMsg(msg) {
            $.ajax({
                url: "/UrChats/sendMsg?msg=" + msg + "&rid=" + rid,
                success: function (result) {

                    $("#chatData").html(result);
                    $("#msg").val("");
                }
            })
        }
        function getMsg(userid) {
            $.ajax({
                url: "/UrChats/getChat?id=" + userid,
                success: function (result) {

                    rid = userid;

                    $("#chatdata").html(result);
                }
            });
            //setInterval(function () {
            //    $("#chatData2").load("/UrChats/refreshChat?id=" + rid).fadeIn("slow");
            //}, 100000);
        }


    </script>
<link rel="icon" href="images/fav.png" type="image/png" sizes="16x16">

<link rel="stylesheet" href="~/Content/Chat/css/main.min.css">
<script src="~/Scripts/Chat/js/main.min.js"></script>
<link href="~/Content/Chat/css/main.min.css" rel="stylesheet" />
<link href="~/Content/Chat/css/style.css" rel="stylesheet" />
<link href="~/Content/Chat/css/color.css" rel="stylesheet" />
<link href="~/Content/Chat/css/responsive.css" rel="stylesheet" />
<div class="se-pre-con"></div>
<div class="theme-layout">

    <div class="responsive-header">
        <div class="mh-head first Sticky">
            <span class="mh-btns-left">
                <a class="" href="#menu"><i class="fa fa-align-justify"></i></a>
            </span>
            <span class="mh-text">
                <a href="newsfeed.html" title=""><img src="~/Content/Chat/images/logo2.png" alt=""></a>
            </span>
            <span class="mh-btns-right">
                <a class="fa fa-sliders" href="#shoppingbag"></a>
            </span>
        </div>
    </div><!-- responsive header -->



    <section>
        <div class="gap2 gray-bg">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="message-users">
                            <div class="mesg-peple">
                                <ul class="nav nav-tabs nav-tabs--vertical msg-pepl-list">
                                    @foreach (EventApp.Models.Tbluser u in Model)
                                    {
                                    <li class="nav-item ">
                                        <a class="active" href="#link1" data-toggle="tab" onclick="getMsg(@u.Userid)">
                                            <figure>
                                                @if (u.Usertype == 1)
                                                {
                                                <img src="~/Content/Shared/Client_Image/@u.Profilepic" alt="">
                                                }
                                                else
                                                {
                                                <img src="~/Content/Shared/Eventer_Image/@u.Profilepic" alt="">
                                                }
                                                <span class="status f-online"></span>
                                            </figure>
                                            <div class="user-name">
                                                <h6 class="">@u.Username</h6>
                                                <span>&nbsp;</span>
                                            </div>

                                        </a>
                                    </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="tab-content messenger" id="chatdata">
                            <div style="height:420px"></div>    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- content -->



</div>

<div class="call-wraper">
    <div class="m-live-call">
        <figure><img src="~/Content/Chat/images/resources/author.jpg" alt=""></figure>
        <div class="call-box">
            <h6>Jack Carter</h6>
            <span>incoming call</span>
            <i class="ti-microphone"></i>
            <div class="wave">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>
            <ins class="later-rmnd">Remind me later</ins>
            <div class="yesorno">
                <a class="bg-blue accept-call" href="#" title=""><i class="fa fa-phone"></i></a>
                <a class="bg-red decline-call" href="#" title=""><i class="fa fa-close"></i></a>
            </div>
        </div>
    </div>
</div><!-- audio video call popup -->
