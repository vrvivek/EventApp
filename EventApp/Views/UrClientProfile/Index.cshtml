@model EventApp.Models.Tblclient

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section id="event-section" class="event-section sec-ptb-100 clearfix col-md-12 col-lg-12">
    <div class="container">

        <div class="mb-50">
            <div class="row">

                <!-- section-title - start -->
                <div class="col-lg-3 col-md-12 col-sm-12">
                    <div class="section-title text-left">
                        <span class="line-style"></span>
                        <small class="sub-title"></small>
                        <h2 class="big-title"><strong>Profile</strong> Edit</h2>
                    </div>
                </div>
                <!-- section-title - end -->
                <!-- event-tab-menu - start -->
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <div class="event-tab-menu clearfix col-md-12">
                        <ul class="nav">
                            <li>
                                <a data-toggle="tab" href="#conference-event" class="@ViewBag.tab1">
                                    <strong><i class="fas fa-edit"></i>Change</strong> Details
                                </a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#playground-event" class="@ViewBag.tab2">
                                    <strong><i class="fas fa-paste"></i>Change</strong> Password
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- event-tab-menu - end -->

            </div>
        </div>

        <!-- tab-content - start -->
        <div class="tab-content">

            <!-- conference-event - start -->
            <div id="conference-event" class="tab-pane fade @ViewBag.tab1">
                <div class="container">
                    <form method="post" action="UrClientProfile/EditDetails">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tbluser.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Tbluser.Username, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.Tbluser.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Zip, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "", @pattern = "[0-9]{6}" } })
                                @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Name", "Full Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @pattern = "[A-Za-z ].{5,25}" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                            <input type="radio" name="Gender" value="0" style="margin-left:10px;margin-right:10px;" checked="" />Male<input type="radio" name="Gender" value="1" style="margin-left:10px;margin-right:10px;" />Female
                        </div>

                        <div class="form-group" id="datetime">
                            @Html.Label("Date Of Birth ", htmlAttributes: new { @class = "control-label col-md-4" }) @Model.Dateofbirth
                            <div class="col-md-8">
                                <div class='col-md-12'>
                                    <input type='date' name="Dateofbirth" class="form-control" value="@Model.Dateofbirth" autocomplete="off" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 @ViewBag.cls1">
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Change Profile" name="btnsubmit" class="btn btn-primary" style="margin-top:10px" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- conference-event - end -->
            <!-- playground-event - start -->
            <div id="playground-event" class="tab-pane fade @ViewBag.tab2">
                <div class="row">

                    <!-- event-item - start -->
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="event-item clearfix">
                            <form method="post" action="UrClientProfile/ChangePassword" class="col-md-12 col-sm-12 col-lg-12">
                                Old password: <input type="password" name="oldpwd" class="form-control" required/>
                                New password: <input type="password" name="password" class="form-control" required />
                                Conform password:<input type="password" name="conpwd" class="form-control" required />
                                                 <span class="col-md-12 @ViewBag.cls2 ">@ViewBag.msg1</span>
                                <input type="submit" value="Change Password" name="btnsubmit" class="btn btn-primary" style="margin-top:10px" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- playground-event - end -->
        </div>
        <!-- tab-content - end -->
    </div>
</section>

